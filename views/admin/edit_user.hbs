<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      {{!-- <th scope="col">Mobile</th> --}}
      <th scope="col">Status</th>
      <th scope="col">Change</th>
    </tr>
  </thead>
  <tbody>
    {{#each user}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      {{!-- <td>{{this.mobile}}</td> --}}
      {{!-- <td>{{this.status}}</td> --}}

      {{#if this.status}}
      <td style="color: red;"> Block</td>
      {{else}}
      <td style="color: green;"> Active</td>
      {{/if}}

      <td>
        {{#if this.status}}
        <a class="btn btn-outline-success" href="/admin/active-user/{{this._id}}"
          onclick="return confirm('Are you sure you want to active user {{this.name}} ?')">unblock
          <ion-icon name="checkmark-outline"></ion-icon>
        </a>
        {{else}}
        <a class="btn btn-outline-danger" href="/admin/block-user/{{this._id}}"
          onclick="return confirm('Are you sure you want to block user {{this.name}} ?')">block
          <ion-icon name="close-outline"></ion-icon>
          </ion-icon>
        </a>
        {{/if}}
        {{!-- <ion-icon name="close-outline"></ion-icon> --}}
      </td>



    </tr>
    {{/each}}
  </tbody>
</table>