        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">
              <form class="mx-1 mx-md-4" action="/signup" method="post" id="signup" onsubmit="return validation()">

                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <input type="text" id="name" name="name" class="form-control" onkeyup="validateName()" />
                    <span id="name-error" class="text-danger font-weight-bold"></span>
                    <label class="form-label" for="form3Example1c">Your Name</label>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <input type="email" id="email" name="email" class="form-control" onkeyup="validateEmail()" />
                    <span id="email-error" class="text-danger font-weight-bold"></span>
                    <label class="form-label" for="form3Example3c">Your Email</label>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <input type="number" id="phone" name="phone" class="form-control" onkeyup="validatePhone()" />
                    <span id="phone-error" class="text-danger font-weight-bold"></span>
                    <label class="form-label" for="form3Example3c">Mobile Number</label>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <input type="password" id="password" name="password" class="form-control"
                      onkeyup="validatePassword()" />
                    <span id="pass-error" class="text-danger font-weight-bold"></span>
                    <label class="form-label" for="form3Example4c">Password</label>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    <input type="password" name="conpassword" id="conpassword" class="form-control"
                      onkeyup="validateConfirm()" />
                    <span id="confirmPass-error" class="text-danger font-weight-bold"></span>
                    <label class="form-label" for="form3Example4cd">Repeat your password</label>
                  </div>
                </div>
               
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <button type="submit" class="btn btn-primary btn-lg" onclick="return validateForm()">Register</button>
                  <span id="submit-error" class="text-danger font-weight-bold"></span>
                </div>

              </form>
            </div>
          </div>
        </div>
